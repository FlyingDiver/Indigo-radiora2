<?xml version="1.0"?>
<Events>
    <Event id="timeClockEvent">
        <Name>Time Clock Event</Name>
        <ConfigUI>
            <Field id="eventNumber" type="textfield">
                <Label>Event Number:</Label>
            </Field>
        </ConfigUI>
   </Event>
    <Event id="groupEvent">
        <Name>Group Event</Name>
        <ConfigUI>
            <Field id="groupNumber" type="textfield">
                <Label>Group (Room) Number:</Label>
            </Field>
            <Field type="menu" id="occupancyPopUp" defaultValue="occupied">
                <Label>Becomes:</Label>
                <List>
                    <Option value="3">Occupied</Option>
                    <Option value="4">Vacant (Unoccupied)</Option>
                    <Option value="255">Unknown</Option>
                </List>
            </Field>            
        </ConfigUI>
   </Event>
   <Event id="keypadButtonPress">
        <Name>Keypad Button Press</Name>
 		<ConfigUI>
			<Field id="deviceID" type="textfield">
				<Label>Device ID:</Label>
			</Field>
			<Field id="componentID" type="textfield">
				<Label>Component ID:</Label>
			</Field>
 		</ConfigUI>
	</Event>
	<Event id="anyButtonPress"  deviceFilter="self, props.isButton">
		<Name>Button Press</Name>
 		<ConfigUI>
            <Field type="menu" id="buttonPressed" deviceFilter="self, props.isButton">
				<Label>Device:</Label>
			</Field>
 		</ConfigUI>
    </Event>
</Events>


