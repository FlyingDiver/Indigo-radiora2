<?xml version="1.0"?>
<MenuItems>
    <MenuItem id="queryAll">
        <Name>Query All Devices Now</Name>
        <CallbackMethod>queryAllDevices</CallbackMethod>
    </MenuItem>
    <MenuItem id="sendCommand">
        <Name>Send Raw Command</Name>
        <CallbackMethod>sendRawCommandMenu</CallbackMethod>
        <ButtonTitle>Send</ButtonTitle>
        <ConfigUI>
            <Field id="commandString" type="textfield">
                <Label>Command String:</Label>
            </Field>
        </ConfigUI>
    </MenuItem>
    <MenuItem id="titleSeparator1" type="separator" />
    <MenuItem id="createAll">
        <Name>Create Devices from Repeater</Name>
        <CallbackMethod>createAllDevicesMenu</CallbackMethod>
        <ButtonTitle>Create</ButtonTitle>
        <ConfigUI>
			<Field id="group_by" type="menu" defaultValue="Type">
				<Label>Group New Devices By:</Label>
				<List>
					<Option value="None">No Folders</Option>
					<Option value="Room">Device Location</Option>
					<Option value="Type">Device Type</Option>
				</List>
			</Field>            
			<Field id="simulated" type="checkbox" defaultValue="true">
				<Label>Simulate only:</Label>
			</Field>            
			<Field id="create_unused" type="checkbox" defaultValue="false">
				<Label>Create unprogrammed buttons:</Label>
			</Field>            
			<Field id="create_unused_note" type="label" fontSize="small" fontColor="darkgray">
				<Label>Checking this box will create buttons for all keypads/repeaters, even those not programmed.</Label>
			</Field>
        </ConfigUI>
    </MenuItem>
</MenuItems>
